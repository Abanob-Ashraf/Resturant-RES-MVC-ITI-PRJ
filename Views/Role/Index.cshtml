@model IEnumerable<Resturant_RES_MVC_ITI_PRJ.Models.ViewModels.roleVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="NewRole">Create New Model</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item">Edit</a> |
                <a asp-action="Details" asp-route-id="@item">Details</a> |
                <a asp-action="Delete" asp-route-id="@item">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
