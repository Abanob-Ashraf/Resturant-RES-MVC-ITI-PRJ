@model Resturant_RES_MVC_ITI_PRJ.Areas.Client.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<div id="kt_app_toolbar_container" class="app-container container p-3 d-flex flex-stack">
    <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
        <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Edit Customer</h1>
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <li class="breadcrumb-item text-muted">
                <a asp-action="Index" asp-controller="Home" asp-area="" class="text-muted text-hover-primary">Home</a>
            </li>
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-400 w-5px h-2px"></span>
            </li>
            <li class="breadcrumb-item text-muted">Edit Customer</li>
        </ul>
    </div>


</div>
<div id="kt_app_content" class="app-content container m-auto w-75 m-5 p-5">
    <div class="">
        <div class="">
            <form asp-action="Edit" class="w-100">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="CustID" />
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustEmail" class="control-label"></label>
                    <input readonly asp-for="CustEmail" class="form-control" />
                    <span asp-validation-for="CustEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustPassword" class="control-label"></label>
                    <input asp-for="CustPassword" class="form-control" />
                    <span asp-validation-for="CustPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustPhone" class="control-label"></label>
                    <input asp-for="CustPhone" class="form-control" />
                    <span asp-validation-for="CustPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustAddressStreet" class="control-label"></label>
                    <input asp-for="CustAddressStreet" class="form-control" />
                    <span asp-validation-for="CustAddressStreet" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustAddressCity" class="control-label"></label>
                    <input asp-for="CustAddressCity" class="form-control" />
                    <span asp-validation-for="CustAddressCity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustAddressCounty" class="control-label"></label>
                    <input asp-for="CustAddressCounty" class="form-control" />
                    <span asp-validation-for="CustAddressCounty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a class="btn btn-warning" asp-action="Index" asp-area="Client">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
