@model Resturant_RES_MVC_ITI_PRJ.Areas.Client.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<div id="kt_app_toolbar_container" class="app-container container p-3 d-flex flex-stack">
    <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
        <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Customer Details</h1>
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <li class="breadcrumb-item text-muted">
                <a asp-action="Index" asp-controller="Home" asp-area="" class="text-muted text-hover-primary">Home</a>
            </li>
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-400 w-5px h-2px"></span>
            </li>
            <li class="breadcrumb-item text-muted">Customer Details</li>
        </ul>
    </div>
</div>
<div id="kt_app_content" class="app-content container-fluid m-auto w-75 m-5 p-5">
    <div>
  
        <table class="table table-info table-striped" id="TableData">
            <thead>
                <tr class="">
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.CustEmail)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.CustPhone)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.CustAddressStreet)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.CustAddressCity)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.CustAddressCounty)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="align-middle text-center">
                    <td>
                        @Html.DisplayFor(modelItem => Model.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.CustEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.CustPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.CustAddressStreet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.CustAddressCity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.CustAddressCounty)
                    </td>
                </tr>
            </tbody>
        </table>
        <div>
            <a class="btn btn-warning" asp-action="Index" asp-area="Client">Back to List</a>
        </div>
    </div>

</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $('#TableData').DataTable();
    });

</script>
