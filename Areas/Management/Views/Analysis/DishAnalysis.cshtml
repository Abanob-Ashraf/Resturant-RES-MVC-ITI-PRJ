@using Resturant_RES_MVC_ITI_PRJ.Areas.Client.Models;


@{
    List<Dish> LeastOrderedDishes = ViewBag.LeastOrderedDishes;
}

<div id="kt_app_toolbar_container" class="app-container container p-3 d-flex flex-stack">
    <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
        <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Orders Analysis</h1>
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <li class="breadcrumb-item text-muted">
                <a asp-action="Index" asp-controller="Home" asp-area="" class="text-muted text-hover-primary">Home</a>
            </li>
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-400 w-5px h-2px"></span>
            </li>
            <li class="breadcrumb-item text-muted">Orders Analysis</li>
        </ul>
    </div>
</div>

<div id="kt_app_content" class="app-content container m-auto flex-column-fluid m-5 p-5">
    <p class="fw-bold fs-4">Last Ordered Dishes</p>
    <table class="table table-danger table-striped" id="TableData01">
        <thead>
            <tr class="align-middle text-center">
                <th class="text-center">Dish Name</th>
                <th class="text-center">Dish Price</th>
                <th class="text-center">Dish Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dish in LeastOrderedDishes)
            {
                <tr class="align-middle text-center">
                    <td>@dish.DishName</td>
                    <td>@dish.DishPrice</td>
                    <td>@dish.DishCategory.DishCategoryName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $('#TableData01').DataTable();
    });
</script>
