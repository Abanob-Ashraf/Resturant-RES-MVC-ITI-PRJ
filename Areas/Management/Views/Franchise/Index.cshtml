@model IEnumerable<Resturant_RES_MVC_ITI_PRJ.Areas.Management.Models.Franchise>

@{
    ViewData["Title"] = "Index";
}

<style>
    a.btn {
        display: felx;
        align-items: center;
        justify-content: space-evenly;
    }

    th, td {
        text-align: center !important;
    }
</style>

<div id="kt_app_toolbar_container" class="app-container container p-3 d-flex flex-stack">
    <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
        <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Franchises</h1>
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <li class="breadcrumb-item text-muted">
                <a asp-action="Index" asp-controller="Home" asp-area="" class="text-muted text-hover-primary">Home</a>
            </li>
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-400 w-5px h-2px"></span>
            </li>
            <li class="breadcrumb-item text-muted">Franchises</li>
        </ul>
    </div>
</div>

<div id="kt_app_content" class="app-content container-fluid m-auto flex-column-fluid m-5 p-5">
    <p>
        <a asp-action="Create" class="btn btn-success">Create New +</a>
    </p>
    <table class="table table-info table-striped" id="TableData">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Street)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manager)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manager.EmpFirstName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.FranchiseId" class="btn btn-warning">Edit <i class="fa-solid fa-pen-to-square"></i> </a> |
                        <a asp-action="Details" asp-route-id="@item.FranchiseId" class="btn btn-info">Details <i class="fa-solid fa-circle-info"></i></a> |
                        <a data-bs-target="#FranchiseModal" data-bs-toggle="modal" data-id="@item.FranchiseId" class="btn btn-danger open-AddDeleteDialog">Delete <i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<!--Franchise Deletion Modal -->
<div class="modal fade" id="FranchiseModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Franchise Confirmation</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are You Sure you want to Delete Employee?
            </div>
            <input type="hidden" />
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="FranchiseId" href="" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#TableData').DataTable();
    });

    $(document).on("click", ".open-AddDeleteDialog", function () {
        var myEmpId = "Client/Franchise/Delete/" + $(this).data('id');
        $("#FranchiseId").attr('href', myEmpId);
    });
</script>
