@model Resturant_RES_MVC_ITI_PRJ.Areas.Management.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<div id="kt_app_toolbar_container" class="app-container container p-3 d-flex flex-stack">
    <!--begin::Page title-->
    <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
        <!--begin::Title-->
        <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Employee Details</h1>
        <!--end::Title-->
        <!--begin::Breadcrumb-->
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">
                <a asp-action="Index" asp-controller="Home" asp-area="" class="text-muted text-hover-primary">Home</a>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-400 w-5px h-2px"></span>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">Employee Details</li>
            <!--end::Item-->
        </ul>
        <!--end::Breadcrumb-->
    </div>
    <!--end::Page title-->

</div>

<div id="kt_app_content" class="app-content container m-auto w-75 m-5 p-5">
    <div>
        <table class="table table-info table-striped" id="TableData">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpFirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpLastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpPhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpNationalId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpHiringDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpSalary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeCategory)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Franchise)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                <tr class="align-middle text-center">
                    <td>
                        @Html.DisplayFor(modelItem => Model.EmpFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.EmpLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.EmpEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.EmpPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.EmpNationalId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.EmpHiringDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.EmpSalary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.EmployeeCategory.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Franchise.City)
                    </td>
                    <td class="d-flex align-items-center justify-content-evenly flex-column">
                        <a asp-action="Edit" asp-route-id="@Model.EmpID" class="btn btn-warning">Edit <i class="fa-solid fa-pen-to-square"></i> </a> |
                        <a data-bs-target="#EmpModal" data-bs-toggle="modal" data-id="@Model.EmpID" class="btn btn-danger open-AddDeleteDialog">Delete <i class="fas fa-trash-alt"></i></a>

                    </td>
                </tr>

            </tbody>
        </table>


        <div class="my-5">
            <a class="btn btn-warning" asp-action="Index" asp-area="Management">Back to List</a>

        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="EmpModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee Confirmation</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are You Sure you want to Delete Employee?
            </div>
            <input type="hidden" />
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="EmpId" href="" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<script>
    $(document).ready(function () {
        $('#TableData').DataTable();
    });

    $(document).on("click", ".open-AddDeleteDialog", function () {
        var myEmpId = "Client/Employee/Delete/" + $(this).data('id');
        $("#EmpId").attr('href', myEmpId);
    });
</script>

