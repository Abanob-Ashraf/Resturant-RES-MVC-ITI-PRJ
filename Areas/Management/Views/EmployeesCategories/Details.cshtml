@model Resturant_RES_MVC_ITI_PRJ.Areas.Management.Models.EmployeeCategory

@{
    ViewData["Title"] = "Details";
}

<div id="kt_app_toolbar_container" class="app-container container p-3 d-flex flex-stack">
    <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
        <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0"> Employee Category Details </h1>
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <li class="breadcrumb-item text-muted">
                <a asp-action="Index" asp-controller="Home" asp-area="" class="text-muted text-hover-primary">Home</a>
            </li>
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-400 w-5px h-2px"></span>
            </li>
            <li class="breadcrumb-item text-muted">Create Employee Category Details </li>
        </ul>
    </div>
</div>

<div id="kt_app_content" class="app-content container m-auto w-75 m-5 p-5">
    <table class="table table-info table-striped" id="TableData">
        <thead>
            <tr class="align-middle text-center">
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model.EmployeeCategoryId" class="btn btn-warning">Edit <i class="fa-solid fa-pen-to-square"></i> </a> |
                    <a data-bs-target="#EmpCateModal" data-bs-toggle="modal" data-id="@Model.EmployeeCategoryId" class="btn btn-danger open-AddDeleteDialog">Delete <i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        </tbody>
    </table>
    <div>
        <a class="btn btn-warning" asp-action="Index" asp-area="Management">Back to List</a>
    </div>
</div>


<!--Employee Category Deletion Modal -->
<div class="modal fade" id="EmpCateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee Category Confirmation</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are You Sure you want to Delete Employee Category?
            </div>
            <input type="hidden" />
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="EmpCateId" href="" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<script>
    $(document).ready(function () {
        $('#TableData').DataTable();
    });

    $(document).on("click", ".open-AddDeleteDialog", function () {
        var myEmpCateId = "Client/EmployeesCategories/Delete/" + $(this).data('id');
        $("#EmpCateId").attr('href', myEmpCateId);
    });
</script>
